[flake8]
max-line-length = 88
max-complexity = 10
extend-ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E501: line too long (handled by black)
    E501,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E402: module level import not at top of file
    E402
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    venv,
    .venv,
    *.egg-info,
    build,
    dist
per-file-ignores =
    __init__.py:F401
    tests/*:S101,D103